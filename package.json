{
  "name": "telepathy-assignment-backend",
  "version": "1.0.0",
  "description": "Telepathy Assignment Backend",
  "main": "./dist/app.js",
  "private": true,
  "scripts": {
    "lint": "npx eslint --fix ./src/**/*.*",
    "typecheck": "tsc --noEmit",
    "test": "jest --coverage --runInBand --colors --bail --detectOpenHandles",
    "update": "npx ncu -u && yarn install",
    "build": "npx ttsc --p ./tsconfig.json",
    "start:build": "node dist/index.js",
    "start": "run-p start:local start:mongo:db start:mongo:ui",
    "start:local": "ts-node-dev -r tsconfig-paths/register --respawn src/index.ts",
    "start:mongo:db": "docker-compose up",
    "start:mongo:ui": "mongo-gui -u mongodb://localhost:27016/"
  },
  "author": "Simon Verhoeven",
  "license": "MIT",
  "dependencies": {
    "@typegoose/typegoose": "^9.0.1",
    "@types/jest": "^27.0.2",
    "@types/uuid": "^8.3.1",
    "apollo-server-express": "^3.3.0",
    "apollo-server-plugin-base": "^3.2.0",
    "async-mutex": "^0.3.2",
    "axios": "^0.21.4",
    "class-validator": "^0.13.1",
    "express": "^4.17.1",
    "graphql": "^15.6.0",
    "moment": "^2.29.1",
    "moment-timezone": "^0.5.33",
    "mongo-gui": "^0.0.13",
    "mongodb": "^4.1.2",
    "mongoose": "^6.0.7",
    "npm-run-all": "^4.1.5",
    "reflect-metadata": "^0.1.13",
    "source-map-support": "^0.5.20",
    "ts-jest": "^27.0.5",
    "ts-node-dev": "^1.1.8",
    "tsconfig-paths": "^3.11.0",
    "tsconfig-paths-jest": "^0.0.1",
    "tsconfig-paths-webpack-plugin": "^3.5.1",
    "type-graphql": "^1.1.1",
    "typedi": "^0.10.0",
    "typescript": "^4.4.3",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "@types/jest": "^27.0.2",
    "@typescript-eslint/eslint-plugin": "^4.31.2",
    "@typescript-eslint/parser": "^4.31.2",
    "eslint": "^7.32.0",
    "eslint-config-airbnb": "^18.2.1",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.24.2",
    "eslint-plugin-prettier": "^4.0.0",
    "husky": "^4.3.8",
    "jest": "^27.2.1",
    "lint-staged": "^11.1.2",
    "prettier": "^2.4.1",
    "ts-jest": "^27.0.5",
    "ts-node": "^10.2.1",
    "tsconfig-paths": "^3.11.0",
    "ttypescript": "^1.5.12",
    "typescript": "^4.4.3",
    "typescript-transform-paths": "^2.0.0"
  },
  "lint-staged": {
    "src/**/*.{ts,tsx}": [
      "prettier --write",
      "eslint --fix"
    ],
    "src/**/*.{json,ts,tsx}": [
      "prettier --write --config .prettierrc"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged && yarn typecheck"
    }
  }
}
